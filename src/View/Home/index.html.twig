{% extends 'layout.html.twig' %}


{% block content %}
<!-- Header section -->
<header>
  <h1>
    <img src="https://www.wildcodeschool.com/assets/logo_main-e4f3f744c8e717f1b7df3858dce55a86c63d4766d5d9a7f454250145f097c2fe.png" alt="Wild Code School logo" />
    Les Argonautes
  </h1>
</header>

<!-- Main section -->
<main>
  
  <!-- New member form -->
  <h2>Ajouter un(e) Argonaute</h2>
  <form class="new-member-form" method="post">
    <label for="name">Nom de l&apos;Argonaute</label>
    <input id="name" name="name" type="text" placeholder="Charalampos" />
    <button type="submit" id="submit">Envoyer</button>
  </form>
    {# <div id="editname">
        <form method="get">
            <p>{{ user.id }}</p>
            <input id="name" name="name" type="text" placeholder="{{ user.name }}" />
            <button type="submit"></button>
        </form>
    </div> #}
  <h2>Faire une recherche d'Argonautes</h2>  
  <div class="search-bar">
    <input type="text" id="searchbar" placeholder="Rechercher par nom" value="">
    </div>
  <!-- Member list -->
  <h2>Membres de l'équipage</h2>
  <div class="error">
    {% for error in errors %}
        <p>{{error}}</p>
    {% endfor %}
  </div>
    <div class="container-board" id="container-board">
        {% for user in users %}
        <div class="name-board">
            <p>{{ user.name }}</p>
            <div class="container-icon">
                <a href="edit/?id={{user.id}}" type="submit" value="{{user.id}}" onclick="myFunction()"><img class="icon" src="/assets/images/edit.png"></img></a>
                {# <a href="edit/?id={{user.id}}" type="submit" value="{{user.id}}" onclick="myFunction()"><img class="icon" src="/assets/images/edit.png"></img></a> #}
                <a href="delete/?id={{ user.id }}" value="{{ user.id }}"><img class="icon" src="assets/images/delete.png"></img></a>
            </div>
        </div>
        {% endfor %}  
    </div>
</main>

<footer>
  <p>Réalisé par Jason en Anthestérion de l'an 515 avant JC</p>
</footer>

{% block script %}

{% endblock %}
<script type="text/javascript" src="assets/js/Homepage.js"></script>
{% endblock %}

